<div class="row justify-content-center">
  <div class='col-12 col-md-6'>
    <h1><%= t('.change_your_password') %></h1>
    <div class="card mb-2">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group">
            <%= f.label :password, t('.new_password') %><br />
            <% if @minimum_password_length %>
              <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control'  %>
          </div>

         <div class="form-group">
            <%= f.label :password_confirmation, t('.confirm_new_password') %>
            <%= fa_icon 'exclamation-circle', class: "user-passwords-not-match text-danger d-none"%>  
            <%= fa_icon 'check-circle', class: "user-passwords-match text-success d-none" %>             
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'%>           
          </div>

          <div class="form-group">
            <%= f.submit t('.change_my_password'), class: 'btn btn-info' %>
          </div>
        <% end %>
      </div>
    </div>
    <%= render "devise/shared/links" %>

  </div>
</div>