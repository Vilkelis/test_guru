<h1>Question: <%= @question.body %></h1>

<%= render 'shared/notice' %>

<p><strong>Test: </strong><%= @question.test.title %></p>
<p><strong>Question body: </strong><%= @question.body %></p>

<h2>Answers variants</h2>

<%= link_to 'New answer', new_question_answer_path(@question) %>

<table>
	<tr>
		<th>Answer body</th>
		<th>Correct?</th>
		<th colspan="3">Actions</th>
	</tr>
	<%= render @question.answers %>
</table>

<%= render 'back_button' %>
