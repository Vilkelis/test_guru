<div class="row justify-content-center">
  <div class='col-12 col-md-6'>
		<h1><%= t('.title') %></h1>
		<p><%= t('.instructions')%></p>
    <div class="card">
      <div class="card-body">
				<%= form_with model: @feedback, url: feedback_path, local: true do |form| %>
				  <%= render 'shared/errors', resource: @feedback%>
					<div class="form-group">
						<%= form.label :name %>  
						<%= form.text_field :name, id: :feedback_name, class: 'form-control' %>
					</div>
					<div class="form-group">
						<%= form.label :email %>  
						<%= form.email_field :email, id: :feedback_email, class: 'form-control' %>
					</div>	
          <div class="form-group">
            <%= form.label :message %> 
            <%= form.text_area :message, id: :feedback_message,  cols: 40, rows: 4, class: 'form-control'  %>
          </div> 
					<div class="form-group">
						<%= form.submit t('.submit'), class: 'btn btn-info' %>
					</div>
				<% end %>
      </div>
    </div> 

		<%= render 'shared/back_button', caption: t('.back') , path: tests_path %> 

  </div>
</div>
