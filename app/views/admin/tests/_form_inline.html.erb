<%= form_with model: [:admin, test], 
							url: update_inline_admin_test_path(test), 
						  local: true, 
						  class: 'form-inline d-none',						  
						  data: {test_id: test.id} do |form| %>
	   	<div class="form-row align-items-center">			  
			  <div class="col-auto">			  	
					<%= form.text_field :title, id: :test_title, class: 'form-control mb-2 form-inline-input' %>		
				</div>
				<div class="col-auto">	
					<div class="form-row align-items-center">			  
						<div class="col-auto">	  
							<%= form.submit i18n_cr('action.save'), class: 'btn btn-sm btn-primary mb-2'%>
						</div>
						<div class="col-auto">
							<%= link_to i18n_cr('action.cancel'), admin_root_path, 									
									class: "btn btn-sm btn-outline-secondary mb-2 form-inline-cancel-btn",
									data: {test_id: test.id} %>
						</div>
				  </div>
			  </div>
			</div>
<% end %>
 