<div class="row justify-content-center">
  <div class='col-12 col-md-6'>
		<h1><%= question_header(@question) %></h1>
    <div class="card">
      <div class="card-body">
				<%= form_with model: [:admin, @test, @question], local: true do |form| %>
				  <%= render 'shared/errors', resource: @question%>
					<div class="form-group">
						<%= form.label :body %> 
						<%= form.text_area :body, id: :question_body, cols: 40, rows: 4, class: 'form-control'  %>
					</div>
					<div class="form-group">
						<%= form.submit class: 'btn btn-secondary' %>
					</div>
				<% end %>
      </div>
    </div>
		<%= render 'back_button' %>
	</div>
</div>	