<h1><%= answer_header(@answer) %></h1>

<p><strong><%= i18n_ma(@answer.question, 'body') %>: </strong><%= @answer.question.body %></p>

<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resource: @answer%>
  <p>
    <%= form.label :body %> <br>
    <%= form.text_area :body, id: :answer_body,  cols: 40, rows: 4 %>
  </p>  

  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct %>
  </p>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= render 'back_button' %>